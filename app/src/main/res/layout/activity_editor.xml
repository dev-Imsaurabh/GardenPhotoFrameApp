<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".editorUI.Editor_Activity">

    <RelativeLayout
        android:layout_width="650dp"
        android:id="@+id/panel"
        android:layout_margin="2dp"
        android:layout_height="match_parent">


<!--        <FrameLayout-->
<!--            android:id="@+id/template_frame"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:layout_marginStart="2dp"-->
<!--            android:layout_marginTop="2dp"-->
<!--            android:layout_marginEnd="2dp"-->
<!--            android:layout_marginBottom="2dp"-->
<!--            android:background="@drawable/frame1">-->

<!--        </FrameLayout>-->


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/movableImageView"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:id="@+id/save_imageView"/>


        <include
            android:id="@+id/template"
            layout="@layout/fragment_template__frame_" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/movableTextView">

        </TextView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/add_imageView"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/movableSticker"/>





    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/choose_bg_Btn"
            android:src="@drawable/ic_bg"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/add_image"
            android:src="@drawable/ic_add_image"/>


        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/choose_frame_Btn"
            android:src="@drawable/ic_frame"/>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_text_Btn"
            android:layout_weight="1"
            android:src="@drawable/ic_text"/>
        <ImageButton
        android:layout_width="match_parent"
        android:id="@+id/choose_font_Btn"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/ic_font"/>
        <ImageButton
            android:layout_width="match_parent"
            android:id="@+id/choose_sticker_Btn"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_sticker"/>

        <ImageButton
            android:layout_width="match_parent"
            android:id="@+id/delete_element"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete_element"/>
        <ImageButton
            android:layout_width="match_parent"
            android:id="@+id/save_Btn"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_save"/>



    </LinearLayout>






</LinearLayout>